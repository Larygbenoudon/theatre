<div class="row  user-registration">
  <div class="col-md-4 col-12 mx-auto mt-5">
    <div class="card">
      <div class="card-header">
        <div class="col-md-2 col-8 mx-auto">
          <img src="<%= asset_path 'theatre.ico' %>" class="img-fluid" />
        </div>
      </div>
      <div class="card-block">
        <div class="card-text">
          <h3 class="text-center mb-3">Log into your account</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, 'Your email'  %>
              <%= f.text_field :email, autofocus: true, class: "form-control", value: params[:email] %>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Your password'  %>
              <%= link_to('(I forgot my password)', new_password_path(resource_name), class: "small") %>
              <%= f.password_field :password, autocomplete: "off",  class: "form-control"  %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%= f.submit "Log in", class: "btn btn-success btn-block " %>
          <% end %>
          <h4 class="text-center py-3">Don't have an account yet?</h4>
          <%= link_to "Create an account", new_registration_path(resource_name), class: "btn btn-block btn-outline-secondary footer-link" %>
        </div>
      </div>
    </div>
  </div>
</div>
