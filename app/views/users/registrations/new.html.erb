<% content_for :title do %>
  Create a account
<% end %>
<div class="row user-registration">
  <div class="col-md-5 mx-auto mt-5">
    <div class="card mt-3">
      <div class="card-header">
        <div class="col-md-2 col-6 mx-auto">
          <img src="<%= asset_path 'theatre.ico' %>" class="img-fluid">
        </div>
      </div>
      <div class="card-block">
        <div class="card-text">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <fieldset class="mt-0">
              <legend class="mb-4">Tell us about yourself</legend>

              <div class="row">
                <div class="col-md-6">
                  <%= f.label :first_name, class: "sr-only"  %>
                  <%= f.text_field :first_name, autofocus: true, placeholder: true, required: true, class: "form-control"  %>
                </div>
                <div class="col-md-6">
                  <%= f.label :last_name, class: "sr-only"  %>
                  <%= f.text_field :last_name, placeholder: true, required: true, class: "form-control" %>
                </div>
              </div>
              <div class="row my-3">
                <div class="col-md-12">
                  <div class="input-group">
                    <%= select_tag(:admin, options_for_select([['User', 'user'], ['Manager', 'manager']]), class: "form-control") %>
                  </div>
                </div>
              </div>
            </fieldset>

            <fieldset>
              <legend>Choose your login information</legend>
              <div class="row mt-3">
                <div class="col-md-6">
                  <%= f.label :email, class: "sr-only"  %>
                  <%= f.email_field :email, placeholder: true, required: true, class: "form-control" %>
                </div>
                <div class="col-md-6">
                  <%= f.label :username, class: "sr-only"  %>
                  <%= f.text_field :username, placeholder: true, required: true, class: "form-control" %>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-6">
                  <%= f.label :password, class: "sr-only" %>
                  <%= f.password_field :password, placeholder: true, required: true, autocomplete: "off" , class: "form-control"  %>
                  <% if @validatable %>
                    <small><%= @minimum_password_length %> characters minimum</small>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= f.label :password_confirmation, class: "sr-only" %>
                  <%= f.password_field :password_confirmation, placeholder: true, autocomplete: "off" , class: "form-control"  %>
                </div>
              </div>
            </fieldset>
            <%= f.submit "Register",  class: "btn btn-success btn-block mt-3"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
