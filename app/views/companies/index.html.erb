<% content_for :company_active do %> active <% end %>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-striped mt-4">
      <thead>
        <tr>
          <th>Name</th>
          <th>Lieu</th>
          <th>Size</th>
          <th>Phone</th>
          <th>Website</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.lieu %></td>
            <td><%= company.size %></td>
            <td><%= company.phone %></td>
            <td><%= company.website %></td>
            <td><%= link_to 'Show', company %></td>
            <td><%= link_to 'Edit', edit_company_path(company) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
