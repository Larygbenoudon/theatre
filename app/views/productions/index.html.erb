<% content_for :title do %>
  Productions
<% end %>
<% content_for :production_active do %> active <% end %>

<div class="row">
  <div class="col-md-12 mt-3">
    <%= link_to new_production_path , :class => "btn btn-outline-info float-right" do %>
    <i class="fa fa-plus-circle"></i><span class="pl-2">New Production</span>
   <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-striped mt-4">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Adresse</th>
          <th>Manager</th>
          <th>Photo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @productions.each do |production| %>
        <tr>
          <td><%= production.name %></td>
          <td><%= production.description %></td>
          <td><%= production.adresse %></td>
          <td><%= production.manager_id %></td>
          <td><%= production.photo %></td>
          <td><%= link_to 'Show', production %></td>
          <td><%= link_to 'Edit', edit_production_path(production) %></td>
          <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
