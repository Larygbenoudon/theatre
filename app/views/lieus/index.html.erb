<p id="notice"><%= notice %></p>
<% content_for :lieu_active do %> active <% end %>
<div class="row">
  <div class="col-md-12 mt-3">
    <%= link_to new_lieu_path , :class => "btn btn-outline-info float-right" do %>
    <i class="fa fa-plus-circle"></i><span class="pl-2">New Lieu</span>
   <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-striped mt-4">
      <thead>
        <tr>
          <th>Name</th>
          <th>Adresse</th>
          <th>Photo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @lieus.each do |lieu| %>
        <tr>
          <td><%= lieu.name %></td>
          <td><%= lieu.adresse %></td>
          <td>
            <% if lieu.photo? %>
              <%= image_tag lieu.photo_url , :class => "img-fluid rounded image-nav"%>
            <% else %>
              <%= image_tag gravatar_url(current_user.email, 30), alt: "gravatar" , :class => "img-fluid rounded"%>
            <% end %>
          </td>
          <td><%= link_to 'Show', lieu %></td>
          <td><%= link_to 'Edit', edit_lieu_path(lieu) %></td>
          <td><%= link_to 'Destroy', lieu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
