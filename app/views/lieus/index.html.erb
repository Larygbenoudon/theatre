<p id="notice"><%= notice %></p>

<h1>Lieus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adresse</th>
      <th>Photo</th>
      <th>Theatre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lieus.each do |lieu| %>
      <tr>
        <td><%= lieu.name %></td>
        <td><%= lieu.adresse %></td>
        <td><%= lieu.photo %></td>
        <td><%= lieu.theatre_id %></td>
        <td><%= link_to 'Show', lieu %></td>
        <td><%= link_to 'Edit', edit_lieu_path(lieu) %></td>
        <td><%= link_to 'Destroy', lieu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

